general {
    lock_cmd = pidof hyprlock || hyprlock
    before_sleep_cmd = loginctl lock-session
    after_sleep_cmd = hyprctl dispatch dpms on
}

listener {
    timeout = 120
    on-timeout = ddcutil setvcp 10 0 -d 1; ddcutil setvcp 10 0 -d 2
    on-resume = ddcutil setvcp 10 75 -d 1; ddcutil setvcp 10 75 -d 2
}

listener {
    timeout = 300
    on-timeout = hyprctl dispatch dpms off
    on-resume = ddcutil setvcp 10 75 -d 1; ddcutil setvcp 10 75 -d 2; hyprctl dispatch dpms on;
}

listener {
    timeout = 360
    on-timeout = loginctl lock-session
}
